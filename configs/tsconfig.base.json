{
    "compilerOptions": {
        "target": "ESNext",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "../dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["../src/**/*"]
}
